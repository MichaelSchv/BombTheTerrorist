        <View
            android:layout_width="200dp"
            android:layout_height="0dp"/>

        <ImageButton
            android:id="@+id/main_BTN_right"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/right_arrow"
            />

